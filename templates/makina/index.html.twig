{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }}
    - Makina
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('makina') }}
{% endblock %}

{% block body %}
    <div class="container pt-5">
        <main>
            <h1 class="mt-5 mb-3">La Makina</h1>
            <section class="bg-white p-3 rounded">
                <h2 class="text-decoration-underline">Pr√©sentation:</h2>
                <p class="mt-3">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quaerat rerum praesentium esse modi tempora voluptates nam veritatis ipsam, recusandae omnis natus at placeat aliquam, excepturi commodi nihil, ad suscipit incidunt animi labore quis. Vitae dicta reiciendis ipsum aspernatur, minima doloremque?</p>
                <div class="cards row">
                    {% for link in links %}
                        <div class="card shadow mb-2 col-xl-3 col-lg-4 col-md-6 col-12 p-2">
                            <iframe src="{{ link.url }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            <div class="card-body">
                                <h5 class="card-title">{{ link.title }}</h5>
                                <p class="card-text fs-6">{{ link.description|slice(0, 200)}}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </section>
        </main>
    </div>
{% endblock %}
